{
  "name": "@initiate-ui/figma-generate-text-styles",
  "version": "1.0.0",
  "description": "Figma plugin to quickly generate and organise text styles",
  "scripts": {
    "test": "npm run tsc && npm run build",
    "format": "prettier --write .",
    "tsc": "npm run tsc:main && npm run tsc:ui",
    "tsc:main": "tsc --noEmit -p plugin-src",
    "tsc:ui": "tsc --noEmit -p ui-src",
    "tsc:watch": "concurrently -n widget,iframe \"npm run tsc:main -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\"",
    "build": "npm run build:ui && npm run build:main -- --minify",
    "build:main": "esbuild plugin-src/code.ts --bundle --outfile=dist/code.js",
    "build:ui": "npx vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"npm run build:main -- --watch\" \"npm run build:ui -- --watch\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'vite'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "Figma",
  "license": "MIT License",
  "dependencies": {
    "@stitches/react": "^1.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@storybook/addon-essentials": "^7.0.0-beta.36",
    "@storybook/addon-interactions": "^7.0.0-beta.36",
    "@storybook/addon-links": "^7.0.0-beta.36",
    "@storybook/blocks": "^7.0.0-alpha.8",
    "@storybook/builder-vite": "^0.3.0",
    "@storybook/react": "^7.0.0-beta.36",
    "@storybook/react-vite": "^7.0.0-alpha.36",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "concurrently": "^6.3.0",
    "esbuild": "^0.13.5",
    "prettier": "^2.3.2",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.0-beta.36",
    "typescript": "^4.4.2",
    "vite": "^4.0.4",
    "vite-plugin-singlefile": "^0.5.1",
    "vite-svg-loader": "^3.3.0"
  }
}
